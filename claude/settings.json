  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Notification in: '$(basename \"$CLAUDE_PROJECT_DIR\")'\" with title \"Claude Code\" sound name \"Submarine\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Completed in: '$(basename \"$CLAUDE_PROJECT_DIR\")'\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  }
}
